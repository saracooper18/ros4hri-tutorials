<launch>
    <!-- USB Camera Node -->
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="camera_info_url" value="file:///root/ros4hri_ws/src/ros4hri-tutorials/default_webcam_calibration.yml" />
    </node>

    <!-- Static Transform Publisher -->
    <node pkg="tf" type="static_transform_publisher" name="static_transform_publisher" args="0 0 0 -0.5 0.5 -0.5 0.5 sellion_link /head_camera 50" />

    <!-- Expressive Eyes -->
    <include file="$(find expressive_eyes)/launch/expressive_eyes.launch" />

    <!-- Emotion Recognizer -->
    <include file="$(find hri_emotion_recognizer)/launch/emotion_recognizer.launch" />

    <!-- HRI Fullbody -->
    <include file="$(find hri_fullbody)/launch/hri_fullbody.launch">
        <arg name="rgb_camera" value="usb_cam" />
    </include>

    <!-- Face Detection (appears twice, only one included) -->
    <include file="$(find hri_face_detect)/launch/detect.launch">
        <arg name="rgb_camera" value="usb_cam" />
        <arg name="filtering_frame" value="head_camera" />
    </include>

    <!-- Face Identification -->
    <include file="$(find hri_face_identification)/launch/face_identification.launch" />

    <!-- Humans Reference Frame Parameters -->
    <param name="/humans/reference_frame" value="head_camera" />
    <param name="/humans/robot_reference_frame" value="head_camera" />

    <!-- HRI Person Manager -->
    <node name="hri_person_manager" pkg="hri_person_manager" type="hri_person_manager" output="screen" />

    <!-- Launch Rviz and rqt_image_view -->
    <node name="rviz" pkg="rviz" type="rviz" output="screen"/>
    <node name="rqt_image_view" pkg="rqt_image_view" type="rqt_image_view" output="screen"/>

</launch>