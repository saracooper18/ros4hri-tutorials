<launch>
    <!-- Static Transform Publisher -->
    <node pkg="tf" type="static_transform_publisher" name="static_transform_publisher" args="0 0 0 -0.5 0.5 -0.5 0.5 sellion_link /head_camera 50" />

    <!-- Expressive Eyes -->
    <include file="$(find expressive_eyes)/launch/expressive_eyes.launch" />

    <!-- Emotion Recognizer -->
    <include file="$(find hri_emotion_recognizer)/launch/emotion_recognizer.launch" />

    <!-- Face Detection -->
    <include file="$(find hri_face_detect)/launch/detect.launch">
        <arg name="rgb_camera_topic" value="/usb_cam/image_raw" />
    </include>

    <!-- USB Camera Node -->
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="camera_info_url" value="file:///root/ros4hri_ws/src/ros4hri-tutorials/default_webcam_calibration.yml" />
    </node>

</launch>
